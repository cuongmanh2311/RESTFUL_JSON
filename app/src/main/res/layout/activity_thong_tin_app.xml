<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:background="@drawable/books"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTT"
        android:background="@color/colortoolbar"
        app:titleTextColor="@color/colorChutRANG"
        app:title="Thông tin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/timg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/colorChutRANG"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:text="Thông tin về chúng tôi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@color/colorChutRANG"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@mipmap/place"
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="20sp"
                android:text="Địa chỉ: 42 Man Thiện ,Quận 9,tp HCM"
                android:textColor="@color/colorChuden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorChutRANG"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.dell.restful_json.View2.ThongTinApp.ThongTinAppActivity" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

