<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.restful_json.view3.MainActivity">
  <Button
      android:layout_marginTop="10dp"
      android:textColor="#fff"
      android:background="@color/colorGia"
      android:id="@+id/btnToanBoSP"
      android:layout_gravity="center"
      android:text="Toàn bộ sản phẩm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <Button
      android:layout_marginTop="10dp"
      android:textColor="#fff"
      android:background="@color/colorGia"
    android:id="@+id/btnDetailSp"
      android:layout_gravity="center"
      android:text="CHI TIẾT SẢN PHẨM "
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <Button
      android:layout_marginTop="10dp"
      android:textColor="#fff"
      android:background="@color/colorName"
      android:id="@+id/btnLuuSP"
      android:layout_gravity="center"
      android:text="THÊM SẢN PHẨM "
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <Button
      android:layout_marginTop="10dp"
      android:id="@+id/btnSPDM"
      android:layout_gravity="center"
      android:text="SẢN PHẨM THEO DANH MỤC"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
</LinearLayout>
